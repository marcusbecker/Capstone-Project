<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingStart="6dip"
    android:paddingEnd="6dip"
    android:textAppearance="?android:attr/textAppearanceLarge">

    <ImageView
        android:id="@+id/ivWidgetPhoto"
        android:layout_width="@dimen/photo_item_size"
        android:layout_height="@dimen/photo_item_size"
        android:layout_margin="@dimen/photo_item_margin"
        android:adjustViewBounds="true"
        android:contentDescription="@string/label_item_photo" />

    <TextView
        android:id="@+id/tvWidgetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:layout_alignTop="@+id/ivWidgetPhoto"
        android:layout_toEndOf="@+id/ivWidgetPhoto" />

    <TextView
        android:id="@+id/tvWidgetSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:layout_below="@+id/tvWidgetTitle"
        android:layout_toEndOf="@+id/ivWidgetPhoto" />

    <TextView
        android:id="@+id/tvWidgetSumm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data"
        android:layout_below="@+id/ivWidgetPhoto"
        android:layout_alignStart="@+id/ivWidgetPhoto" />


</RelativeLayout>